{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "php-skeetbot/dwd-webcam",
	"description": "A bot that posts pictures from the German Weather Service (DWD) webcams.",
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/php-skeetbot/dwd-webcam/graphs/contributors"
		}
	],
	"funding": [
		{
			"type": "Ko-Fi",
			"url": "https://ko-fi.com/codemasher"
		}
	],
	"homepage": "https://github.com/php-skeetbot/dwd-webcam",
	"support": {
		"issues": "https://github.com/php-skeetbot/dwd-webcam/issues",
		"source": "https://github.com/php-skeetbot/dwd-webcam"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^8.4",
		"chillerlan/php-dotenv": "^3.0",
		"chillerlan/php-settings-container": "^3.2",
		"php-skeetbot/php-skeetbot": "^1.0"
	},
	"require-dev": {
		"phpmd/phpmd": "^2.15",
		"phpstan/phpstan": "^2.1.37",
		"phpstan/phpstan-deprecation-rules": "^2.0.3",
		"phpunit/phpunit": "^12.5.8",
		"slevomat/coding-standard": "^8.27",
		"squizlabs/php_codesniffer": "^4.0"
	},
	"suggest": {
	},
	"autoload": {
		"psr-4": {
			"PHPSkeetBot\\DWDWebcamBot\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PHPSkeetBot\\DWDWebcamBotTest\\": "tests"
		}
	},
	"scripts": {
		"phpcs": "@php vendor/bin/phpcs -v",
		"phpstan": "@php vendor/bin/phpstan",
		"phpstan-baseline": "@php vendor/bin/phpstan --generate-baseline",
		"phpunit": "@php vendor/bin/phpunit"
	},
	"config": {
		"lock": true,
		"sort-packages": true,
		"platform-check": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
